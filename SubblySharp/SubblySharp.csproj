<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>netcoreapp2.2</TargetFramework>
    <RootNamespace>SubblySharp</RootNamespace>
    <Version>0.0.9</Version>
  </PropertyGroup>
  <PropertyGroup>
    <Description>SubblySharp is a C# and .NET library that helps developers easily manage Subbly stores.</Description>
    <Authors>Jisha Jose</Authors>
    <Copyright>Prime Penguin</Copyright>
    <PackageLicenseUrl>https://raw.githubusercontent.com/PrimePenguin/SubblySharp/master/LICENSE</PackageLicenseUrl>
    <PackageProjectUrl>https://github.com/PrimePenguin/SubblySharp</PackageProjectUrl>
    <RepositoryUrl>https://github.com/PrimePenguin/SubblySharp</RepositoryUrl>
    <PackageTags>Subbly,ecommerce</PackageTags>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageIconUrl>https://raw.githubusercontent.com/PrimePenguin/SubblySharp/master/PrimePenguin.png</PackageIconUrl>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Abp" Version="5.12.0" />
    <PackageReference Include="Newtonsoft.Json" Version="12.0.3" />
  </ItemGroup>

</Project>
